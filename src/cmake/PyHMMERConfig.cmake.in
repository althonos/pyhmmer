
cmake_path(ABSOLUTE_PATH CMAKE_CURRENT_LIST_DIR NORMALIZE OUTPUT_VARIABLE _path)
cmake_path(GET _path PARENT_PATH _path)
cmake_path(GET _path PARENT_PATH _PYHMMER_LIBS_DIR)

cmake_path(APPEND _PYHMMER_LIBS_DIR "include"            OUTPUT_VARIABLE _PYHMMER_INCLUDE_DIR)
cmake_path(APPEND _PYHMMER_LIBS_DIR "include" "libeasel" OUTPUT_VARIABLE _PYHMMER_EASEL_INCLUDE)
cmake_path(APPEND _PYHMMER_LIBS_DIR "include" "libhmmer" OUTPUT_VARIABLE _PYHMMER_HMMER_INCLUDE)

cmake_path(APPEND _PYHMMER_LIBS_DIR "liblibeasel${CMAKE_SHARED_LIBRARY_SUFFIX}" OUTPUT_VARIABLE _PYHMMER_EASEL_LIB)
cmake_path(APPEND _PYHMMER_LIBS_DIR "liblibhmmer${CMAKE_SHARED_LIBRARY_SUFFIX}" OUTPUT_VARIABLE _PYHMMER_HMMER_LIB)

cmake_path(APPEND _PYHMMER_LIBS_DIR "cython" "include" OUTPUT_VARIABLE _PYHMMER_CYTHON_DIR)

set(PyHMMER_INCLUDE_DIRS "${_PYHMMER_INCLUDE_DIR}" "${_PYHMMER_EASEL_INCLUDE}" "${_PYHMMER_HMMER_INCLUDE}")
set(PyHMMER_LIBRARIES    "${_PYHMMER_EASEL_LIB}" "${_PYHMMER_HMMER_LIB}")
set(PyHMMER_CYTHON_DIRS  "${_PYHMMER_CYTHON_DIR}")
set(PyHMMER_PREFIX       "${_PYHMMER_LIBS_DIR}")
set(PyHMMER_HMMER_IMPL   "@HMMER_IMPL@")
set(PyHMMER_IMPL_FLAGS   "@IMPL_FLAGS@")
set(PyHMMER_BUILD_TYPE   "@CMAKE_BUILD_TYPE@")
set(PyHMMER_SABI_VERSION "@SKBUILD_SABI_VERSION@")
